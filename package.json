{
  "name": "haufe-rick-and-morty",
  "version": "1.0.0",
  "description": "Technical challenge for Haufe Group interview process",
  "main": "index.js",
  "author": "Nelson Fleig",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "cz",
    "lint": "yarn workspaces run lint",
    "prepare": "husky install",
    "dev:server": "cd packages/server && yarn dev",
    "dev:web": "cd packages/web && yarn dev",
    "start:dev:db": "./scripts/start-dev-db.sh",
    "stop:dev:db": "./scripts/stop-dev-db.sh"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": ">=6",
    "lint-staged": ">=12.3.7",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
